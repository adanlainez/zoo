<?xml version='1.0' encoding='utf-8'?>
<widget id="net.onlainez.zoo" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Zoo</name>
    <icon src="icon.png" />
    <description>
        Animal Sounds.
    </description>
    <author email="support@onlainez.net" href="http://onlainez.net">
        Onlainez Solutions Team
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
	<plugin name="cordova-plugin-media" spec="~5.0.2" />
    <plugin name="cordova-plugin-device" spec="cordova-plugin-device" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
